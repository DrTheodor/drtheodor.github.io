---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import type { ComponentProps } from 'astro/types';
import Background from '../components/Background.astro';

type Props = { main?: boolean, class?: string, image?: string } & ComponentProps<typeof BaseHead>;

const { main = false, class: className = "", image, ...props } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<BaseHead {...props} image={image} />
	</head>
	<body class="text-slate-50 bg-slate-900 w-full">
        <Background showBlackhole={main} />
		<Header />
        
		<main class:list={[className, "h-full"]}>
			<slot />
		</main>
		<Footer />
	</body>
</html>
